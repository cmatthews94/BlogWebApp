@model BlogWebApp.Models.UserAccount
@{
    ViewData["Title"] = "Post Creation Page";

}
<div class="text-left">
    @using(Html.BeginForm("Logout", "Home"))
    {
         <p>Current User: @Model.Username <br /></p>
         <p>Current User Id: @Model.UserId  <br /></p>
         <input type="button" value="click me to log out" onclick="location.href='@Url.Action("Logout", "Home")'" />

    }
</div>

<div class="text-center">
    @using(Html.BeginForm("CreateNewBlogPost", "Home", FormMethod.Post))
    {
        <p>Create a new post</p>
        <input type="text" name="title" placeholder="enter the title of your post" /><br />
        <input type="text" name="content" placeholder="write your post here" /><br />
        <input type="submit"/>
    }
        @if (TempData["PostCreationFailError"] != null)  
        {  
            <script type="text/javascript">  
                alert('@TempData["PostCreationFailError"]');  
            </script>  
        }
</div>